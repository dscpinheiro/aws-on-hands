@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<table class="table table-bordered table-striped" style="margin: 10px 0">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
    @if (!Model.Products.Any())
    {
        <tr style="text-align: center;">
            <td colspan="4">No products found</td>
        </tr>
    }
    @foreach (var item in Model.Products) 
    {
        <tr>
            <td>@Html.DisplayFor(_ => item.ID)</td>
            <td>@Html.DisplayFor(_ => item.Title)</td>
            <td>@Html.DisplayFor(_ => item.Description)</td>
            <td>@Html.DisplayFor(_ => item.Price)</td>
        </tr>
    }
    </tbody>
</table>